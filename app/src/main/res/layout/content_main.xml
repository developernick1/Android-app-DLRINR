<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button2"
        android:layout_width="144dp"
        android:layout_height="39dp"
        android:layout_marginTop="140dp"
        android:onClick="btniClick"
        android:text="@string/get_amount"
        android:textColor="#FF4800"
        android:textColorHighlight="#0027FF"
        android:textColorHint="#F8FF3600"
        android:textColorLink="#FF6600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlramnt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="125dp"
        android:layout_height="42dp"
        android:text="@string/dlr_inr"
        android:textColor="#000000"
        android:textColorLink="#00FF0000"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dlramnt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="ENTER AMOUNT IN $$"
        android:inputType="textPersonName"
        android:textColor="#FFAA00"
        android:textColorHighlight="#FF8400"
        android:textColorHint="#FF6500"
        android:textColorLink="#FF6600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:autofillHints="" />

    <EditText
        android:id="@+id/inramnt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="152dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="ENTER AMOUNT IN Rs"
        android:inputType="textPersonName"
        android:textColor="#FFAA00"
        android:textColorHighlight="#FF8400"
        android:textColorHint="#FF6500"
        android:textColorLink="#FF6600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="144dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:onClick="btnClick"
        android:text="GET INR AMOUNT"
        android:textColor="#FF4800"
        android:textColorHighlight="#0027FF"
        android:textColorHint="#F8FF3600"
        android:textColorLink="#FF6600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dlramnt" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="451dp"
        android:layout_height="269dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/download"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:text="BY NICK"
        android:textColor="#0055FF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

</androidx.constraintlayout.widget.ConstraintLayout>